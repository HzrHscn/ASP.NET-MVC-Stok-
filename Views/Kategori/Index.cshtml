@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATEGORILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <td>@ktgr.KATEGORID</td>
                <td><a href="@Url.Action("KategoriDetay", "Kategori", new { id = ktgr.KATEGORID })">@ktgr.KATEGORIAD</a></td>
                <td>@Html.ActionLink("SIL BUTONU", "SIL", new { id = ktgr.KATEGORID}, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Silmek İstiyor musunuz?')" })</td>
                @*<td><a href="/KATEGORI/SIL/@ktgr.KATEGORID" class="btn btn-danger">SİL</a></td> ALERSİZ SİLME*@
                <td><a href="/KATEGORI/KategoriGetir/@ktgr.KATEGORID" class="btn btn-warning">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/KATEGORI/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>

