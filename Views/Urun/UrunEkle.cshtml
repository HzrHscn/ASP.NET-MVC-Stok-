@model MvcStok.Models.Entity.TBLURUNLER

@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" />
    </div>
    <div>
        <label>Ürün Marka</label>
        <input type="text" class="form-control" name="MARKA" required="" />
    </div>
    <div>
        <label>Ürün Kategorisi Seçiniz</label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Ürün Fiyat</label>
        <input type="text" class="form-control" name="FIYAT" required="" />
    </div>
    <div>
        <label>Ürün Stok</label>
        <input type="text" class="form-control" name="STOK" required="" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-success" id="btn1">Ürün Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Ürün ekleme işlemi tamamlandı...');
        });
    </script>
</form>

